@model ToDoList


<h1>Add a New Task to Your @TempData["CurrentList"] List</h1>

<form method="Post" asp-action="AddNewTask" asp-route-currentL="@TempData["CurrentList"]">
    <div class="border p-3 mt-4">
        <div class ="row pb-2">
            <h2 class="text-primary"> Create Task</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Task"></label>
            <input asp-for="Task" class="form-control" />
            <span asp-validation-for="Task" class="text-danger"></span>
        </div>
        <div class="form-check">
            <label asp-for="ImportantTask" class="form-check-label">Mark as Important</label>
            <input asp-for="ImportantTask" class="form-check-input" type="checkbox" />
        </div>
        <br />



        <button type="submit" class ="btn btn-success" style ="width:150px"> Add Task </button>

        <a asp-controller="ToDoList" asp-action="LoadList" asp-route-name="@TempData["CurrentList"]" class="btn btn-warning" style="width:150px">
        Back to List
        </a>
    </div>
</form>
