@model IEnumerable<ToDoList>
@{
    ViewData["Title"] = "Index";
}

<h1> Your To-Do List </h1>

<br />



<table class="table table-default">
  <thead>
    <tr>
      <th scope="col">Current Tasks</th>
      <th scope="col">Status</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
     @*going through each row of data*@
      @foreach(var obj in Model)
            {
                <tr>
                    <td >                   
                        @obj.Task
                    </td>
                    <td >     
                        <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@obj.IsCompleted" id="flexCheckDefault">
                        @*@obj.IsCompleted*@
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                             <a asp-controller="ToDoList" asp-action="Edit" asp-route-id="@obj.Id"> Edit </a> 
                        </div>
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ToDoList" asp-action="Delete" asp-route-id="@obj.Id"> Delete </a> 
                        </div>
                    </td>
                </tr>
            }
  </tbody>

</table>

  <br />

  <div class="container p-1">
        <a asp-controller="ToDoList" asp-action="AddNewTask" class="btn btn-success" style="width:200px">
        Add Additional Task
        </a>
  </div> 