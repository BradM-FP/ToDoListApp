@model IEnumerable<ToDoList>
@{
    ViewData["Title"] = "LoadTemplate";
}

@{
    string currentTemplateName = @TempData["TemplateName"].ToString();
}


<h1> If you would like to save this list, select the 'Save Template' option </h1>


<br />


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col" style="text-align:center; width:200px">Task List</th>
        </tr>
    </thead>

    <tbody>
        @*going through each row of data*@
        @foreach (var obj in Model)
        {
            <tr style="text-align:center">
                
                <td class="table-light" style="text-align:center">
                    @obj.Task
                </td>             

            </tr>

        }
    </tbody>

</table>

<br />

<div class="container p-1">
    <a asp-controller="ListMain" asp-action="SaveTemplate" asp-route-templateName="@currentTemplateName" class="btn btn-primary" style="width:250px">
        Save Template
    </a>
</div> 