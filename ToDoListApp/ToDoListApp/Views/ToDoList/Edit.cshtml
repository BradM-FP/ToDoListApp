@model ToDoList
@{
    ViewData["Title"] = "Edit Task";
}

<form method="Post" asp-action="Edit" asp-route-currentL="@TempData["CurrentList"]">
    <div class="border p-3 mt-4">
        <div class ="row pb-2">
            <h2 class="text-primary"> Edit a Task </h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Task"></label>
            <input asp-for="Task" class="form-control" />
            <span asp-validation-for="Task" class="text-danger"></span>
        </div>

        <div class="form-check">
            <label asp-for="ImportantTask" class="form-check-label">Mark as Important</label>
            <input asp-for="ImportantTask" class="form-check-input" type="checkbox" />
        </div>
        <br />
        <div class="form-control">
            <label asp-for="FinishByDate" class="form-check-label">Finish By:</label>
            <input asp-for="FinishByDate" asp-format="{0:dd/MM/yyy HH:mm}" type="date" />

        </div>
        <br />


        <button type="submit" class ="btn btn-success" style ="width:150px"> Update Task </button>
        <a asp-controller="ToDoList" asp-action="Index" asp-route-currentL="@TempData["CurrentList"]" class="btn btn-warning" style="width:150px">
        Back to List
        </a>
    </div>
</form>
