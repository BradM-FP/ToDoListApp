@model ListMain
@{
    ViewData["Title"] = "Edit List Name";
}

<form method="Post" asp-action="Edit" asp-route-currentListName="@TempData["CurrentListName"]">
    <div class="border p-3 mt-4">
        <div class ="row pb-2">
            <h2 class="text-primary"> Update List Name </h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="ListName"></label>
            <input asp-for="ListName" class="form-control" />
            <span asp-validation-for="ListName" class="text-danger"></span>
        </div>



        <button type="submit" class ="btn btn-success" style ="width:150px"> Update Task </button>
        <a asp-controller="ListMain" asp-action="Index" class="btn btn-warning" style="width:150px">
        Back to Lists
        </a>
    </div>
</form>
